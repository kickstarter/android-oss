<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/newsletter_layout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/ksr_grey_100"
  android:orientation="vertical">

  <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/newsletter_toolbar" />

  </android.support.design.widget.AppBarLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        style="@style/NewsLetterTextView"
        android:layout_marginBottom="@dimen/grid_2"
        android:layout_marginTop="@dimen/grid_3"
        android:text="@string/Stay_up_to_date_newsletter" />

      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/subscribe_all_text_view"
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_subscribe_all" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/subscribe_all_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        style="@style/SettingsLinearRow"
        android:layout_marginTop="@dimen/grid_6">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/projects_we_love_text_view"
            style="@style/NewsletterSingleRow"
            android:text="@string/Projects_We_Love" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/projects_we_love_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/Sign_up_newsletter" />

      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_happening" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/happening_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/Happening_newsletter" />

      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_games" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/games_we_love_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/Games_newsletter" />

      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_invent" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/invent_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/Discover_arts_news" />

      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_arts_news" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/arts_news_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/profile_settings_newsletter_arts_news_newsletter" />


      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_film" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/films_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/profile_settings_newsletter_films_newsletter" />

      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_publishing" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/reads_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/profile_settings_newsletter_publishing_newsletter" />

      <LinearLayout
        style="@style/SettingsLinearRow">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/grid_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <TextView
            style="@style/NewsletterSingleRow"
            android:text="@string/profile_settings_newsletter_alumni" />

          <android.support.v7.widget.SwitchCompat
            android:id="@+id/alumni_switch"
            style="@style/NewsLetterSwitch" />

        </LinearLayout>
      </LinearLayout>

      <TextView
        style="@style/NewsLetterTextView"
        android:text="@string/profile_settings_newsletter_alumni_newsletter" />

    </LinearLayout>

  </ScrollView>

</LinearLayout>

