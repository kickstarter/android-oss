<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@color/light_gray"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/login_toolbar" />

    <LinearLayout
      android:orientation="vertical"
      android:gravity="center_horizontal"
      android:paddingLeft="@dimen/grid_16"
      android:paddingRight="@dimen/grid_16"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/facebook_login_button"
        style="@style/FacebookButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <TextView
        style="@style/CaptionSecondary"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1"
        android:text="@string/login_tout_disclaimer_we_never_post_anything_without_permission" />

      <Button
        style="@style/BorderButton"
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/grid_3"
        android:layout_marginBottom="@dimen/grid_1"
        android:text="@string/login_buttons_log_in_email" />

      <Button
        style="@style/BorderButton"
        android:id="@+id/sign_up_button"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/grid_1"
        android:text="@string/signup_button_email" />

      <TextView
        android:id="@+id/disclaimer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1"
        android:layout_marginBottom="@dimen/grid_2"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/grid_2"
        android:layout_marginStart="@dimen/grid_2"
        android:layout_marginEnd="@dimen/grid_2"
        android:layout_marginRight="@dimen/grid_2"
        android:textAppearance="@style/CaptionPrimary"
        android:textColor="@color/dark_gray"
        android:text="@string/___By_signing_up_you_agree_to_our_sign_up" />

    </LinearLayout>
  </LinearLayout>
</ScrollView>

