<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    style="@style/CreatorDashboardTableRowContainer">

    <LinearLayout
      android:layout_width="@dimen/grid_20"
      android:layout_height="match_parent"
      android:layout_marginEnd="@dimen/grid_2"
      android:background="@color/kds_support_100"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/amount_pledged_for_referrer_text_view"
        style="@style/CreatorDashboardTableRowText"
        android:layout_marginEnd="@dimen/grid_1_half"
        tools:text="$1,000,067" />
    </LinearLayout>

    <TextView
      android:id="@+id/referrer_backer_count_text_view"
      android:layout_width="@dimen/grid_13"
      style="@style/CreatorDashboardTableRowText.SecondaryColumn"
      tools:text="28" />

    <ImageView
      android:id="@+id/referrer_source_circle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/grid_1"
      android:contentDescription="@null"
      android:src="@drawable/creator_dashboard_circle"
      tools:tint="@color/ksr_green_700" />

    <TextView
      android:id="@+id/referrer_source_text_view"
      android:layout_weight="3"
      android:layout_width="0dp"
      style="@style/CreatorDashboardTableRowText.SecondaryColumn"
      tools:text="Facebook" />

  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_gravity="bottom"
    android:background="@drawable/divider_grey_500_horizontal" />
</FrameLayout>