<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_height="wrap_content"
  android:layout_width="match_parent">

  <android.support.v7.widget.CardView
    android:id="@+id/message_thread_card_view"
    android:focusable="true"
    android:foreground="@drawable/message_thread_click_indicator"
    android:layout_marginStart="@dimen/grid_new_2"
    android:layout_marginEnd="@dimen/grid_new_2"
    android:layout_marginBottom="@dimen/grid_new_1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
      android:padding="@dimen/grid_new_2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/participant_avatar_image_view"
        android:layout_width="@dimen/grid_new_5"
        android:layout_height="@dimen/grid_new_5"
        tools:background="@color/green"
        tools:ignore="ContentDescription"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

      <TextView
        android:id="@+id/date_text_view"
        style="@style/CaptionPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Yesterday"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

      <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/participant_avatar_image_view"
        android:layout_marginStart="@dimen/grid_new_2"
        android:layout_marginEnd="@dimen/grid_new_2"
        android:layout_toStartOf="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
          android:orientation="horizontal"
          android:layout_marginBottom="@dimen/grid_new_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <TextView
            android:id="@+id/participant_name_text_view"
            style="@style/BodyPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/grid_new_1"
            tools:text="Somebody once told me that" />

          <TextView
            android:id="@+id/message_thread_unread_count_text_view"
            style="@style/CaptionPrimary"
            android:textColor="@color/ksr_blue"
            android:textStyle="bold"
            android:layout_weight="0"
            android:layout_marginEnd="@dimen/grid_new_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(2)"/>

        </LinearLayout>

        <TextView
          android:id="@+id/message_body_text_view"
          style="@style/BodySecondary"
          android:lines="2"
          android:ellipsize="end"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Thanks for backing our project!" />

      </LinearLayout>

    </RelativeLayout>

  </android.support.v7.widget.CardView>

  <ImageView
    android:id="@+id/unread_indicator_image_view"
    android:background="@drawable/unread_message_indicator"
    android:foregroundGravity="center"
    android:translationZ="3dp"
    android:layout_width="@dimen/grid_new_2"
    android:layout_height="@dimen/grid_new_2"
    android:layout_marginStart="@dimen/grid_new_1"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    tools:ignore="ContentDescription,UnusedAttribute"/>

</RelativeLayout>
