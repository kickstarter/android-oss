<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="200"
        motion:motionInterpolator="linear">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/media_header"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/project_detail_tabs"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" />

        <Constraint android:id="@+id/backer_check_mark">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/green_background">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/backing_group">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/backer_text_view">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/media_header"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            />
        <Constraint android:id="@+id/backer_check_mark">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/green_background">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/backing_group">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
        <Constraint android:id="@+id/backer_text_view">
            <PropertySet motion:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>
</MotionScene>
